<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home" >

    <com.example.movielist.MyLayout2
        android:id="@+id/mylayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.example.movielist.MyLayout2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/backcolor"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <requestFocus />
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edittext_top2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:ems="15"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mode2"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/mode_title"
                    android:gravity="center"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <com.example.movielist.MyList2
            android:id="@+id/listView12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:divider="@null"
            android:dividerHeight="0.1dp" >
        </com.example.movielist.MyList2>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/backcolor"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_add2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape2"
                android:text="keyboard"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_add22"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape2"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_sdel2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape2"
                android:text="change mode"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>